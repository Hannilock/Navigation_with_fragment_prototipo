<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_view">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3">
        <TableRow
            android:layout_weight="0.8"
            android:weightSum="1"
            android:layout_marginBottom="2dp">

            <ImageButton
                android:id="@+id/events_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/calendaric" />
        </TableRow>

        <TableRow
            android:layout_weight="1.1"
            android:weightSum="2"
            android:layout_marginBottom="2dp">

            <ImageButton
                android:id="@+id/whatdo_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:src="@drawable/windturbineic" />

            <ImageButton
                android:id="@+id/eat_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:src="@drawable/eatic" />
        </TableRow>
        <TableRow
            android:layout_weight="1.1"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/accom_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"

                android:src="@drawable/bedic" />

            <ImageButton
                android:id="@+id/services_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/hospitalic" />
        </TableRow>
    </TableLayout>
</android.support.v4.widget.DrawerLayout>
